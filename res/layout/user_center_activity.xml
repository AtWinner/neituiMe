<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ScrollView 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/UserCenterSctollView"
		android:background="@color/myGrary"
        >
		<LinearLayout 
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:background="@color/myGrary"
	        >
		    <LinearLayout 
				android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:id="@+id/UserCenterTop"
		        android:layout_margin="10dp"
		        android:padding="10dp"
		        >
		        <ImageView 
		            android:layout_width="70dp"
				    android:scaleType="fitXY"
					android:layout_height="70dp"
		    		android:id="@+id/UserCenterImageView"
		    		android:background="@color/myGrary"
		            />
		        <LinearLayout 
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:orientation="vertical"
		            >
		            <TextView 
		                android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
		    			android:id="@+id/UserCenterName"
		                />
		            <TextView 
		                android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
		    			android:id="@+id/UserCenterDescription"
		                />
		        </LinearLayout>
		    </LinearLayout>
		    
		    
		</LinearLayout>
    </ScrollView>

    
    <LinearLayout 
         android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_alignParentBottom="true"
	     android:orientation="horizontal"
        >
		<RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/UserCenterBottomLinear"
	        android:orientation="horizontal"
	        android:background="@color/MainBlue"
	        >
	        <LinearLayout 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	     		android:layout_alignParentLeft="true"
	     		android:orientation="horizontal"
	            >
	              <ImageButton 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:id="@+id/UserCenterGetBack"
			            android:background="@drawable/arrow"
			            android:layout_alignParentBottom="true"
			            />
			        <Button 
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:text="返回"
			            android:textColor="@color/white"
			            android:textSize="30sp"
			            android:gravity="center_vertical"
			            android:fontFamily="黑体"
			            android:background="@color/MainBlue"
			            android:id="@+id/UserCenterbtnGetBack"
			            />
	        </LinearLayout>
	    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
